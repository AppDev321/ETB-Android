<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ETB" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="headingColor">#000000</item>
        <item name="subheadingColor">#000000</item>
        <item name="splashBackColor">#3478b9</item>
        <item name="android:textViewStyle">@style/regularTextViewStyle</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>
        <item name="android:navigationBarColor">@color/red</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="MenuItems" parent="Theme.ETB">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>


    <style name="SuggestTextView">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:text">@string/no_suggestion</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/text_size_11sp</item>

    </style>

    <style name="ToolBarTextViewStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>


    <style name="regularTextViewStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">?subheadingColor</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="topBarRegularTextViewStyle" parent="regularTextViewStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="topBarBoldTextViewStyle" parent="regularTextViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="boldTextViewStyle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">?subheadingColor</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="tbControlTextViewStyle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">?subheadingColor</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginStart">@dimen/dimen_size_24dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_size_24dp</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="redRegularText" parent="regularTextViewStyle">
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">#ce0b3b</item>
    </style>

    <style name="GdpBoldText" parent="boldTextViewStyle">
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="MainHeading" parent="boldTextViewStyle">
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="MainSubHeading" parent="boldTextViewStyle">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/colorSubHeading</item>
    </style>

    <style name="numberGdpValue" parent="boldTextViewStyle">
        <item name="android:textSize">@dimen/text_size_24sp</item>
    </style>

    <style name="NavTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">?subheadingColor</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="MediumTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">?subheadingColor</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <style name="MediumRedTextViewStyle" parent="MediumTextViewStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="StockItemTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.ETB">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />


    <style name="CardViewLightSEMargin" parent="CardView.Light">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="CardViewLightTBMargin" parent="CardView.Light">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="CardViewLight" parent="CardViewLightTBMargin">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="CardViewLightFooter" parent="CardViewLightSEMargin">
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="CardViewLightHeader" parent="CardViewLightSEMargin">
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="LargeInputField" parent="Widget.AppCompat.EditText">
        <!--        <item name="android:background">@drawable/ic_input_field</item>-->
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">@dimen/dimen_size_24dp</item>
        <item name="android:paddingEnd">@dimen/dimen_size_24dp</item>
        <item name="android:textColorHint">@color/colorSubHeading</item>
        <item name="android:textColor">@drawable/selector_edittext</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="RoundedInputFieldStyle">
        <!--        <item name="android:background">@drawable/ic_input_field</item>-->
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:paddingStart">@dimen/dimen_size_20dp</item>
        <item name="android:paddingEnd">@dimen/dimen_size_20dp</item>
        <item name="android:textColorHint">@color/colorSubHeading</item>
        <item name="android:textColor">@drawable/selector_edittext</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/dimen_size_8dp</item>
    </style>


    <!-- Card Low Margin -->

    <style name="CardViewLightLowMargin" parent="CardView.Light">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
    </style>

    <style name="RedRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">@dimen/dimen_size_12dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_size_8dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Theme.ETB.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditTextStyle" parent="Widget.MaterialComponents.CardView">

    </style>

    <style name="Theme.ETB.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ETB.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.ETB.Fullscreen" parent="Theme.ETB">
        <item name="android:actionBarStyle">@style/Widget.Theme.ETB.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="FullscreenTheme1" parent="Theme.ETB">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="ThemeOverlay.ETB.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

</resources>